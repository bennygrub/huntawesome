.profile
  .row
    .col-xs-12.col-sm-6.col-md-4
      =image_tag("group-choice-2.png", style: "width:75px;border:1px solid lightgrey;", class: "img-circle")
    .col-xs-12.col-sm-6.col-md-4
      %h1
        %b= @group.first.name
.to-do-tasks
  
  .hunt-progress
    .row
      .col-xs-12.col-sm-3
        %h2 Level 1 Status    
      .col-xs-12.col-sm-3
        %h4
          =@level_1_total_points
          out of 2000
        .progress
          .progress-bar.progress-bar-info{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "20", :role => "progressbar", :style => "width: 20%"}
            %span.sr-only 20% Complete
  %h2 Challenges
  .row
    -@tasks.each do |task|
      =link_to task do
        .col-xs-12.col-sm-6.col-md-4.col-lg-3{style:"margin-bottom:10px;"}
          .task-box
            - if task.completed_tasks.where("group_id = ?", @user.groups.first.id).count > 0
              .task-completed.vcenter
                %h3
                  =task.name
                %h4
                  Completed!
                %h2= task.points
                %h4 Points
            .text-right
              %span.point-corner=task.points
            .text-center=image_tag("task.png", style:"width:40%;")
            %h3.text-center=task.name
            %p=task.description

